{
    "name": "vscode-debug-arg",
    "displayName": "Debug Arg",
    "description": "Dynamic run-time debug argument",
    "version": "1.0.0",
    "publisher": "bostjanpisler",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:debug-arg.prompt"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "debug-arg.prompt",
                "title": "Debug argument"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "repository": "https://github.com/BostjanPisler/vscode-debug-arg"
}
